<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:weightSum="2"
        android:layout_margin="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/cuerpo_humano"
            android:textColor="#000000"
            android:gravity="start|center_vertical"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/sp_galeria_cuerpoHumano"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:entries="@array/array_cuerpoHumano"
            android:text="@string/cuerpo_humano"
            android:textAlignment="textStart"
            android:textSize="10sp" />

    </LinearLayout>




    <HorizontalScrollView
        android:id="@+id/scroll_galeriaCuerpoHumano"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_cuerpo2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/iv_cuerpo1"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/iv_cuerpo3"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop" />
            <ImageView
                android:id="@+id/iv_cuerpo4"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop" />
            <ImageView
                android:id="@+id/iv_cuerpo5"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"/>
        </LinearLayout>
    </HorizontalScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:weightSum="2"
        android:layout_margin="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:text="@string/movimientos"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/sp_galeria_movimientos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:entries="@array/array_movimientos"
            android:text="@string/movimientos"
            android:textAlignment="center"
            android:textSize="10sp" />

    </LinearLayout>




    <HorizontalScrollView
        android:id="@+id/scroll_galeriaMovimientos"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_cuerpo6"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop" />
            <ImageView
                android:id="@+id/iv_cuerpo7"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop" />
            <ImageView
                android:id="@+id/iv_cuerpo8"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop" />
            <ImageView
                android:id="@+id/iv_cuerpo9"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop" />
            <ImageView
                android:id="@+id/iv_cuerpo10"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </HorizontalScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:weightSum="2"
        android:layout_margin="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/ejercicios"
            android:textColor="#301A1A"
            android:textSize="18sp"
            android:gravity="start|center_vertical"
            android:textStyle="bold"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/sp_galeria_ejercicios"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:entries="@array/array_movimientos"
            android:text="@string/movimientos"
            android:textAlignment="center"
            android:textSize="10sp" />

    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/scroll_galeriaEjercicios"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_cuerpo11"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/iv_cuerpo12"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/iv_cuerpo13"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop" />
            <ImageView
                android:id="@+id/iv_cuerpo14"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop" />
            <ImageView
                android:id="@+id/iv_cuerpo15"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"/>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>

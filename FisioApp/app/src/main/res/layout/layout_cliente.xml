<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#BCD0CD"
    app:cardCornerRadius="16dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_nombreCompleto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nombre Completo"
            android:textColor="#3A285E"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/btn_update"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_update"
            android:layout_width="22dp"
            android:layout_height="30dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#FFA726"
            app:cornerRadius="15dp"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconGravity="top"
            app:iconSize="11dp"
            app:layout_constraintEnd_toStartOf="@+id/btnBorrar"
            app:layout_constraintTop_toTopOf="@+id/tv_nombreCompleto" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBorrar"
            android:layout_width="22dp"
            android:layout_height="30dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#E57373"
            app:cornerRadius="15dp"
            app:icon="@android:drawable/ic_delete"
            app:iconGravity="top"
            app:iconSize="11dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_nombreCompleto" />

        <TextView
            android:id="@+id/tv_correo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Correo electrónico:"
            android:textColor="#5B4C7C"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@+id/tv_nombreCompleto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_nombreCompleto" />

        <TextView
            android:id="@+id/tv_telefono"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Teléfono:"
            android:textColor="#5B4C7C"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@+id/tv_correo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_correo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

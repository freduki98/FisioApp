<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#66BB6A"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/sp_galeria_cuerpoHumano"
        android:layout_width="175dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:background="@android:drawable/spinner_dropdown_background"
        android:entries="@array/array_cuerpoHumano"
        android:text="Cuerpo humano"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/scroll_galeriaCuerpoHumano"
        android:layout_width="407dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_galeria_cuerpoHumano">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_cuerpo1"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/iv_cuerpo2"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/iv_cuerpo3"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/iv_cuerpo4"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/iv_cuerpo5"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="30dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>
    </HorizontalScrollView>

    <Spinner
        android:id="@+id/sp_galeria_movimientos"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginEnd="10dp"
        android:background="@android:drawable/spinner_dropdown_background"
        android:entries="@array/array_movimientos"
        android:text="Movimientos"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <HorizontalScrollView
        android:id="@+id/scroll_galeriaMovimientos"
        android:layout_width="407dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_galeria_movimientos">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_cuerpo6"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toStartOf="@+id/iv_cuerpo2"

                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/iv_cuerpo7"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toStartOf="@+id/iv_cuerpo3"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/iv_cuerpo8"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toStartOf="@+id/iv_cuerpo4"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/iv_cuerpo9"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toStartOf="@+id/iv_cuerpo5"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/iv_cuerpo10"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="30dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>
    </HorizontalScrollView>

    <Spinner
        android:id="@+id/sp_galeria_ejercicios"
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:layout_marginEnd="10dp"
        android:background="@android:drawable/spinner_dropdown_background"
        android:entries="@array/array_movimientos"
        android:text="Movimientos"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <HorizontalScrollView
        android:id="@+id/scroll_galeriaEjercicios"
        android:layout_width="407dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_galeria_ejercicios">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_cuerpo11"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toStartOf="@+id/iv_cuerpo2"

                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/iv_cuerpo12"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toStartOf="@+id/iv_cuerpo3"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/iv_cuerpo13"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toStartOf="@+id/iv_cuerpo4"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/iv_cuerpo14"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toStartOf="@+id/iv_cuerpo5"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/iv_cuerpo15"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="30dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CUERPO HUMANO"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/sp_galeria_cuerpoHumano"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/sp_galeria_cuerpoHumano" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="MOVIMIENTOS"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/scroll_galeriaCuerpoHumano" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="EJERCICIOS"
        android:textColor="#301A1A"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/sp_galeria_ejercicios"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_galeriaMovimientos" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fcv_menu_galeria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/menu_redondeado"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll_galeriaEjercicios"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>